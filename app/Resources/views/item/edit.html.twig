{% extends '::base.html.twig' %}
{% block body %}
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h1>Item</h1></div>
            <div class="panel-body">
            </div>
        </div>
        <div class="btn-group">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete" />
            <a class="btn btn-primary inline" href="{{ path('item_index') }}">Back to the List</a>
            {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading"><h1>Edit Item</h1></div>
            <div class="panel-body">
                <fieldset>
                    <legend>Edit</legend>
                    {{ form_start(edit_form) }}
                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.category) }}
                    {{ form_row(edit_form.code) }}
                    {{ form_widget(edit_form._token) }}
                    <div class="text-right">
                        <input class="btn btn-primary" type="submit" value="Save changes" />
                    </div>
                    {{ form_end(edit_form, {'render_rest': false}) }}
                </fieldset>
            </div>
        </div>
    </div>

{% endblock %}