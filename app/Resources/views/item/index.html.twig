{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Items</h1>
                </div>
                <div class="panel-body"></div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><h1>Items</h1></div>
                <div id="tablepanel" class="panel-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th width="5%">ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th width="20%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in items %}
                            <tr>
                                <td>
                                    <a href="{{ path('item_show', { 'id': item.id }) }}">{{ item.id }}</a>
                                </td>
                                <td>{{ item.name }}</td>
                                <td>{{ item.category }}</td>
                                <td>
                                    <a class="btn btn-primary"
                                       href="{{ path('item_show', { 'id': item.id }) }}">Show</a>
                                    <a class="btn btn-primary"
                                       href="{{ path('item_edit', { 'id': item.id }) }}">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                <a class="btn btn-primary" href="{{ path('item_new') }}">Create a new</a>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('javascript/allocations.js') }}"></script>
{% endblock %}
