<div class="panel-text">
    <h3>Module provisions</h3>
</div>
<table class="table table-striped">
    <tr>
        <th>
            Contact Hours
        </th>
        <td>
            <p>
            {{ item.module.contactHrs}}
            </p>
        </td>
    </tr>
    <tr>
        <th>
            Preperation hours
        </th>
        <td>
            {{ item.module.preparationHrs}}
        </td>
    </tr>
    <tr>
        <th>
            Assessment hours
        </th>
        <td>
            {{ item.module.assessmentHrs}}
        </td>
    </tr>
</table>
<div class="panel-text">
    <h3>Current allocations</h3>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>
            Staff name
        </th>
        <th>
            Contact Hours
        </th>
        <th>
            Preperation hours
        </th>
        <th>
            Assessment hours
        </th>

    </tr>
    </thead>
    <tbody>
    {% for allocation in item.allocations %}
    <tr>
        <td>
            {{ allocation.staff.title }}{{ ' ' }}{{ allocation.staff.firstname }}{{ ' ' }}{{ allocation.staff.surname }}

        </td>

        <td>
            {{ allocation.allocatedHrs }}

        </td>
        <td>
            {{ allocation.prepHrs }}

        </td>
        <td>
            {{ allocation.assessmentHrs }}


        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr class="sum">
        <td>
            Total
        </td>
        <td>
            {{ total.totalAllocatedHrs }}
            {% if ((item.module.contactHrs) < (total.totalAllocatedHrs)) %}
                <span class="label label-danger">Over allocated</span>
            {% endif %}
        </td>
        <td>
            {{ total.totalPrepHrs }}
        </td>
        <td>
            {{ total.totalAssessmentHrs }}

        </td>

    </tr>
    </tfoot>
</table>