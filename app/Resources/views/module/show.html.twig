
                    <table class="table table-responsive">
                        <tbody>
                        <tr>
                            <th width="30%">Code</th>
                            <td>{{ module.code }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ module.name }}</td>
                        </tr>
                        <tr>
                            <th>Courses</th>
                            <td>
                                <ul>
                                    {%  for course in module.course %}
                                    <li>
                                        {{ course.name }}
                                    </li>
                                    {% endfor %}

                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <th>Term</th>
                            <td>
                                {% if module.term == 4 %}
                                    {{ 'Terms 1 and 2' }}
                                {% else %}
                                    {{ module.term }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Year</th>
                            <td>{{ module.year }}</td>
                        </tr>
                        <tr>
                            <th>Credits</th>
                            <td>{{ module.credit }}</td>
                        </tr>
                        <tr>
                            <th>Student Numbers</th>
                            <td>{{ module.studentNos }}</td>
                        </tr>
                        <tr>
                            <th>Preparation Hrs</th>
                            <td>{{ module.preparationHrs }}</td>
                        </tr>
                        <tr>
                            <th>Assessment Hrs</th>
                            <td>{{ module.assessmentHrs }}</td>
                        </tr>
                        <tr>
                            <th>Contact Hrs</th>
                            <td>{{ module.contactHrs }}</td>
                        </tr>
                        <tr>
                            <th>Studio Ratio</th>
                            <td>{{ module.studioRatio }}</td>
                        </tr>
                        <tr>
                            <th>Module Category</th>
                            <td>{{ module.moduleCategory.name }}</td>
                        </tr>
                        <tr>
                            <th>Module Leader</th>
                            <td>{{ module.moduleLeader }}</td>
                        </tr>
                        <tr>
                            <th>Internal Moderator</th>
                            <td>{{ module.internalModerator }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="btngroup">
                        <a class="btn btn-primary"
                           href="{{ path('module_edit', { 'id': module.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                            </span>
                            Edit
                        </a>
                    </div>
