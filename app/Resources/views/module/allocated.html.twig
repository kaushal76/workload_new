<div class="panel-text">
    <h3>Current allocations</h3>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>
            Staff name
        </th>
        <th>
            Contact Hours
        </th>
        <th>
            Preperation hours
        </th>
        <th>
            Assessment hours
        </th>

    </tr>
    </thead>
    <tbody>
    {% for allocation in module.allocationsForModule %}
    <tr>
        <td width="50%">
            {{ allocation.staff.title }}{{ ' ' }}{{ allocation.staff.firstname }}{{ ' ' }}{{ allocation.staff.surname }}

        </td>

        <td>
            {{ allocation.allocatedHrs }}

        </td>
        <td>
            {{ allocation.prepHrs }}

        </td>
        <td>
            {{ allocation.assessmentHrs }}


        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr class="sum">
    </tr>
    </tfoot>
</table>