{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><h1>Modules</h1></div>
                <div id="tablepanel" class="panel-body">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Year</th>
                            <th>Term</th>
                            <th width="10%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for course_ in course %}
                            <tr class="sheading">
                                <td colspan="3">{{ course_.name }}</td>
                            </tr>
                            {% for module in course_.modules %}
                            <tr>
                                <td>
                                    {{ module.code }}
                                </td>
                                <td>{{ module.name }}</td>
                                <td>{{ module.year }}</td>
                                <td>
                                    {% if module.term == 4 %}
                                    {{ '1 & 2'}}
                                        {% else %}
                                    {{ module.term }}
                                    {% endif %}
                                </td>
                                <td>
                                    <a class="btn btn-sm"
                                       href="{{ path('module_allocate', { 'id': module.id }) }}">
                                        <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                                    </a>
                                    <a class="btn btn-sm"
                                       href="{{ path('module_edit', { 'id': module.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="btngroup">
                <a class="btn btn-primary" href="{{ path('module_new') }}">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    Add new

                </a>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('javascript/allocations.js') }}"></script>
{% endblock %}

