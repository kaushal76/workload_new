{% extends '::base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1>Modules</h1>
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th width="5%">ID</th>
                        <th>Name</th>
                        <th width="20%">Code</th>
                        <th width="20%">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for module in modules %}
                        <tr>
                            <td>
                                <a href="{{ path('module_edit', { 'id': module.id }) }}">{{ module.id }}</a>
                            </td>
                            <td>{{ module.name }}</td>
                            <td>{{ module.code }}</td>
                            <td>
                                <a class="btn btn-primary"
                                   href="{{ path('module_show', { 'id': module.id }) }}">Show</a>
                                <a class="btn btn-primary"
                                   href="{{ path('module_edit', { 'id': module.id }) }}">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('javascript/allocations.js') }}"></script>
{% endblock %}
