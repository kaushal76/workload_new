<table class="table table-responsive">
    <thead>
    <tr>

        <th>
            Module code
        </th>
        <th>
            Module name
        </th>
        <th>
            Hours
        </th>
        <th>

        </th>

    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="sheading" colspan="4">
            Module leader
        </td>
    </tr>
    {% for allocation in moduleLeaderHrs %}
        <tr>
            <td>
                {{ allocation.code }}

            </td>
            <td>
                {{ allocation.name }}

            </td>

            <td>
                {{ allocation.moduleLeaderHrs | number_format(2) }}

            </td>
            <td>
                <a class="btn btn-sm"
                   href="{{ path('module_edit', { 'id': allocation.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>

            </td>
        </tr>
    {% endfor %}
    <tr class="total">
        <td colspan="3">
            Total
        </td>
        <td>
            {{ moduleLeaderHrsTotal.moduleLeaderHrsTotal | number_format(2) }}
        </td>
    </tr>

    {% if internalModeratorHrs %}
    <tr>
        <td class="sheading" colspan="4">
            Internal moderator
        </td>
    </tr>
    {% for allocation in internalModeratorHrs %}
        <tr>
            <td>
                {{ allocation.code }}

            </td>
            <td>
                {{ allocation.name }}

            </td>
            <td>
                {{ allocation.internalModeratorHrs | number_format(2) }}

            </td>
            <td>
                <a class="btn btn-sm"
                   href="{{ path('module_edit', { 'id': allocation.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    {% endfor %}
    <tr class="total">
        <td colspan="3">
            Total
        </td>
        <td>
            {{ internalModeratorHrsTotal.internalModeratorHrsTotal | number_format(2) }}
        </td>
    </tr>
    </tbody>
    {% endif %}
</table>
