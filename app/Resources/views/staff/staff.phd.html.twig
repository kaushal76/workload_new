{% if PhdAllocations %}
<table class="table table-responsive">
    <thead>
    <tr>
        <th>
            PhD Student
        </th>
        <th width="10%">
            Contact Hours
        </th>
        <th width="10%">
            Support Hours
        </th>
        <th width="5%">

        </th>

    </tr>
    </thead>
    <tbody>
    {% for allocation in PhdAllocations %}
    <tr>
        <td>
            {{ allocation.phdStudent.name }}

        </td>

        <td>
            {{ allocation.allocatedHrs }}

        </td>
        <td>
            {{ allocation.supportHrs }}

        </td>
        <td>
            <a class="btn btn-sm"
               href="{{ path('phdstudent_allocate', { 'id': allocation.phdStudent.id }) }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    {% if PhdAllocationTotals %}
        <tr class="total">
            <td>
                Total

            </td>

            <td>
                {{ PhdAllocationTotals.totalAllocatedHrs }}

            </td>
            <td>
                {{ PhdAllocationTotals.totalSupportHrs }}

            </td>
        </tr>
    {% endif %}
</table>
{% endif %}