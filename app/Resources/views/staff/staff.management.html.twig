{% if managementItems %}
    <table class="table table-responsive">
        <thead>
        <tr>
            <th>
                Item
            </th>
            <th width="10%">
                Allocated hours
            </th>
            <th width="5%">

            </th>

        </tr>
        </thead>
        <tbody>
        {% for allocation in managementItems %}
            <tr>
                <td>
                    {{ allocation.item.name }}

                </td>

                <td>
                    {{ allocation.allocatedHrs }}

                </td>
                <td>
                    <a class="btn btn-sm"
                       href="{{ path('item_allocate', { 'id': allocation.item.id }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}

        <tr class="total">
            <td>
                Total

            </td>

            <td>
                {{ managementItemTotals.allocatedHrsTotal }}

            </td>
            <td>

            </td>
        </tr>
        </tbody>
    </table>
{% endif %}
