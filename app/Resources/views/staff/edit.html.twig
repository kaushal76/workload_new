{% extends '::base.html.twig' %}
{% block body %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success">
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger">
            {% for msg in app.session.flashBag.get('error') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h1>Staff</h1></div>
            <div class="panel-body">
            </div>
        </div>
        <div class="btn-group">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete" />
            <a class="btn btn-primary inline" href="{{ path('index_staff') }}">Back to the List</a>
            {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading"><h1>Edit Staff</h1></div>
            <div class="panel-body">
                <fieldset>
                    <legend>Edit</legend>
                    {{ form_start(edit_form) }}
                    {{ form_row(edit_form.title) }}
                    {{ form_row(edit_form.firstname) }}
                    {{ form_row(edit_form.surname) }}
                    {{ form_row(edit_form.fte) }}
                    {{ form_row(edit_form.comments) }}
                    {{ form_row(edit_form.empbasis) }}
                    {{ form_widget(edit_form._token) }}
                    <div class="text-right">
                        <input class="btn btn-primary" type="submit" value="Save changes" />
                    </div>
                    {{ form_end(edit_form, {'render_rest': false}) }}
                </fieldset>
            </div>
        </div>
    </div>

{% endblock %}