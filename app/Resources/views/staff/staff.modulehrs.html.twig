<div class="panel-text">
    <h3>Current allocations</h3>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>
            Item name
        </th>
        <th>
            Contact Hours
        </th>
        <th>
            Preperation hours
        </th>
        <th>
            Assessment hours
        </th>

    </tr>
    </thead>
    <tbody>
    {% for allocation in staff.allocations %}
    <tr>
        <td>
            {{ allocation.item.name }}

        </td>

        <td>
            {{ allocation.allocatedHrs }}

        </td>
        <td>
            {{ allocation.prepHrs }}

        </td>
        <td>
            {{ allocation.assessmentHrs }}

        </td>
    </tr>
    {% endfor %}
    </tbody>

</table>