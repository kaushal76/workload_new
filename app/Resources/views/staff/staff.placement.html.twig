<table class="table table-responsive">
    <thead>
    <tr>
        <th>
            Module code
        </th>
        <th>
            Module name
        </th>
        <th width="10%">
            Contact Hours
        </th>
        <th width="10%">
            Preperation hours
        </th>
        <th width="10%">
            Assessment hours
        </th>
        <th>

        </th>

    </tr>
    </thead>
    <tbody>
    <tr>
        <td class="sheading" colspan="6">
            Placement modules
        </td>
    </tr>
    {% for allocation in placementtModules %}
        <tr>
            <td>
                {{ allocation.module.code }}

            </td>
            <td>
                {{ allocation.module.name }}

            </td>

            <td>
                {{ allocation.allocatedHrs | number_format(2) }}

            </td>
            <td>
                {{ allocation.prepHrs | number_format(2) }}

            </td>
            <td>
                {{ allocation.assessmentHrs | number_format(2) }}

            </td>
            <td>
                <a class="btn btn-sm"
                   href="{{ path('module_allocate', { 'id': allocation.module.id }) }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    {% endfor %}
    <tr class="total">
        <td colspan="2">
            Total
        </td>

        <td>
            {{ placementModuleTotals.totalAllocatedHrs | number_format(2) }}

        </td>
        <td>
            {{ placementModuleTotals.totalPrepHrs | number_format(2) }}

        </td>
        <td>
            {{ placementModuleTotals.totalAssessmentHrs | number_format(2) }}

        </td>
    </tr>
    </tbody>
</table>