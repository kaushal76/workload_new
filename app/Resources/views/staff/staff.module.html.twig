                    </td>
                    <td>
                        <a class="btn btn-sm"
                           href="{{ path('module_allocate', { 'id': allocation.module.id }) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            {% if studioModulesTotals %}
                <tr class="total">
                    <td colspan="2">
                        Total

                    </td>

                    <td>
                        {{ studioModulesTotals.totalAllocatedHrs | number_format(2) }}

                    </td>
                    <td>
                        {{ studioModulesTotals.totalPrepHrs | number_format(2) }}

                    </td>
                    <td>
                        {{ studioModulesTotals.totalAssessmentHrs | number_format(2) }}

                    </td>
                    <td>

                    </td>
                </tr>
            {% endif %}
        {% endif %}
        {% if mixedModules %}
            <tr>
                <td class="sheading" colspan="6">
                    Mixed modules
                </td>
            </tr>
            {% for allocation in mixedModules %}
                <tr>
                    <td>
                        {{ allocation.module.code }}

                    </td>
                    <td>
                        {{ allocation.module.name }}

                    </td>

                    <td>
                        {{ allocation.allocatedHrs | number_format(2) }}

                    </td>
