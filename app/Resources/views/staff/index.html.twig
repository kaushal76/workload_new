{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h1>Staff</h1></div>
                <div id="tablepanel" class="panel-body">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th class="rotate"><div><span>Research and Enterprise</span></div></th>
                            <th class="rotate"><div><span>Formal Scheduled Teaching</span></div></th>
                            <th class="rotate"><div><span>Teaching related activities</span></div></th>
                            <th class="rotate"><div><span>Management</span></div></th>
                            <th class="rotate"><div><span>Administration</span></div></th>
                            <th class="rotate"><div><span>Total workload</span></div></th>
                            <th width="10%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for staff in staffs %}
                            <tr>
                                <td>{{ staff.title }}{{' '}}{{ staff.firstname }}{{ ' ' }}{{ staff.surname }}  </td>
                                {{ render(controller(
                                'AppBundle:Staff:getHeadingTotals',
                                { 'staff': staff }
                                )) }}
                                <td>
                                    <a class="btn btn-sm"
                                       href="{{ path('allocations_staff', { 'id': staff.id }) }}">
                                        <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                                    </a>
                                    <a class="btn btn-sm"
                                       href="{{ path('edit_staff', { 'id': staff.id }) }}">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="btngroup">
                <a class="btn btn-primary" href="{{ path('new_staff') }}">
                    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                    Add new
                </a>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('javascript/allocations.js') }}"></script>
{% endblock %}
