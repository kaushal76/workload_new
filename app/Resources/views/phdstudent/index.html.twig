{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading"><h1>PhD Students</h1></div>
                <div id="tablepanel" class="panel-body">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Mode</th>
                            <th>Total Hours</th>
                            <th width="10%">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for phdStudent in phdStudents %}
                                <tr>
                                    <td>{{ phdStudent.name }}</td>
                                    <td>{{ phdStudent.mode }}</td>
                                    <td>{{ phdStudent.totalHrs }}</td>
                                    <td>
                                        <a class="btn btn-sm"
                                           href="{{ path('phdstudent_allocate', { 'id': phdStudent.id }) }}">
                                            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-sm"
                                           href="{{ path('phdstudent_edit', { 'id': phdStudent.id }) }}">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="btngroup">
                        <a class="btn btn-primary"
                           href="{{ path('phdstudent_new') }}">
                            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>Add new
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('javascript/allocations.js') }}"></script>
{% endblock %}
