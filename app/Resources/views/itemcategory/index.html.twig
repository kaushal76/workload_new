{% extends 'base.html.twig' %}

{% block body %}
    <h1>Itemcategories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for itemCategory in itemCategories %}
            <tr>
                <td><a href="{{ path('itemcategory_show', { 'id': itemCategory.id }) }}">{{ itemCategory.id }}</a></td>
                <td>{{ itemCategory.name }}</td>
                <td>{{ itemCategory.code }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('itemcategory_show', { 'id': itemCategory.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('itemcategory_edit', { 'id': itemCategory.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('itemcategory_new') }}">Create a new itemCategory</a>
        </li>
    </ul>
{% endblock %}
